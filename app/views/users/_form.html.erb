<div class="row">
  <div class="container register-form">
    <div class="col-md-4 col-md-offset-4 panel panel-default text-center">
      <h1>Rejestracja</h1>
      <%= form_for(@user) do |f| %>
          <%= errors_for @user %>
          <div class="form-group">
            <div class="input-group">
              <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
              <%= f.text_field :login, placeholder: "Login", class: "form-control" %>
            </div>
          </div>

          <div class="form-group">
            <div class="input-group">
              <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
              <%= f.email_field :email, placeholder: "E-mail", class: "form-control" %>
            </div>
          </div>

          <div class="form-group">
            <div class="input-group">
              <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
              <%= f.password_field :password, placeholder: "Hasło", class: "form-control" %>
            </div>
          </div>
          <div class="form-group">
            <div class="input-group">
              <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
              <%= f.password_field :password_confirmation, placeholder: "Powtórz hasło", class: "form-control" %>
            </div>
          </div>


          <div class="form-group text-center">

            <%= f.submit "Rejestruj", class: "btn btn-success"%>
          </div>
      <% end %>
    </div>

  </div>
</div>

