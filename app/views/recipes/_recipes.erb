<% recipes.each do |recipe| %>
    <div class="col-md-4 col-sm-6 recipe">
      <div class="panel panel-default">
        <%= image_tag(recipe.image.url, class: "img-responsive") %>

        <div class="panel-body">
          <p class='lead'><%= recipe.name %></p>
          <hr><p class="text-muted cal"><%= recipe.calories %> kalorii</p></hr>
        </div>
        <div class="panel-footer">
          <p class="text-muted"><span style="float:left"><%= "#{recipe.comments.size} komentarzy" %></span>
            <span style="float:right"><%="#{recipe.votes_for.size} Si!" %></span></p>
        </div>
      </div>
    </div>
<% end %>



