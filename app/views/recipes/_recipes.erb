<div class="panel panel-default">
<% recipes.each do |recipe| %>
    <div class="col-md-4">
      <div class="thumbnail">
        <%= link_to image_tag(recipe.image.url(:med)), recipe.image.url %>
        <div class="caption">
          <h3><%= recipe.name %></h3>
          <p><%= recipe.calories %> kalorii</p>
          <p><%= recipe.instructions.truncate_words(30) %></p>
          <p><%= link_to "WiÄ™cej", recipe_path(recipe), class: "btn btn-primary" %></p>
        </div>
      </div>
    </div>
<% end %>
</div>