<div class="row">
  <div class="nested-fields ">
    <div class="form-group col-md-5">
      <%= f.fields_for :product do |item| %>
          <% name = f.object.item %>
          <% name = f.object.product.name if f.object.product %>
        <%= item.autocomplete_field :name, autocomplete_product_name_recipes_path,
          placeholder: "Produkt", class: "form-control input-sm", value: name %>
      <%end%>
    </div>

    <div class="form-group col-md-2">
      <%= f.number_field :measure, value: 1, class: "form-control input-sm" %>
    </div>
    <div class="form-group col-md-3">
      <%= f.text_field :modifier, placeholder: "Kilogram, gram..", class: "form-control input-sm" %>
    </div>
    <div class="clearfix visible-xs-block"></div>
    <%= link_to_remove_association '<span class="glyphicon glyphicon-remove" />'.html_safe, f, class: "btn btn-default btn-xs" %>
    </div>
</div>



