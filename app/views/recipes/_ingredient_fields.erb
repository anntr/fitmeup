<div class="row">
  <div class="nested-fields ">
    <div class="form-group col-md-5">
      <%# f.label :item, "Jednostka" %>
      <%= f.autocomplete_field :item, autocomplete_product_name_recipes_path,
          placeholder: "Produkt", class: "form-control input-sm" %>
    </div>

    <div class="form-group col-md-2">
      <%# f.label :measure, "Ilość" %>
      <%= f.number_field :measure, value: 1, class: "form-control input-sm" %>
    </div>
    <div class="form-group col-md-3">
      <%# f.label :modifier, "Jednostka" %>
      <%= f.text_field :modifier, placeholder: "Kilogram, gram..", class: "form-control input-sm" %>
    </div>
    <div class="clearfix visible-xs-block"></div>
    <%= link_to_remove_association '<span class="glyphicon glyphicon-remove" />'.html_safe, f, class: "btn btn-default btn-xs" %>
    </div>
</div>



