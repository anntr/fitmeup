<div class="container">
<div class="row">

  <div class="text-center">
    <h1>Nasze przepisy</h1>
  </div>
</div>
<p id="notice"><%= notice %></p>

  <%= link_to "Stwórz przepis", new_recipe_path, class: "btn btn-primary" %>

<div class="row">
  <ul class="nav nav-tabs">
    <li><a data-toggle="tab" data-target="#breakfast">Śniadania</a></li>
    <li><a data-toggle="tab" data-target="#snack">Przekąski</a></li>
    <li class="active"><a data-toggle="tab" data-target="#lunch">Lunch</a></li>
    <li><a data-toggle="tab" data-target="#dinner">Obiady</a></li>
  </ul>

  <div class="tab-content">
    <div id="breakfast" class="tab-pane fade"><%= render "recipes", :recipes => Recipe.breakfast  %></div>
    <div id="snack" class="tab-pane fade"><%= render "recipes", :recipes => Recipe.snack  %></div>
    <div id="lunch" class="tab-pane fade active"><%= render "recipes", :recipes => Recipe.lunch  %></div>
    <div id="dinner" class="tab-pane fade"><%= render "recipes", :recipes => Recipe.dinner  %></div>
  </div>

</div>
</div>




