<p id="notice"><%= notice %></p>
<div class="row">
  <% @menu.recipes.each do |recipe| %>
      <div class="col-md-6 col-md-offset-3">
        <div class="panel panel-primary ">
          <div class="panel-heading">
            <span><%= recipe.name %></span>
          </div>
          <div class="panel-body">
            <%= recipe.instructions %>
          </div>
          <div class="panel-footer"><%= recipe.calories %> kalorii</div>
        </div>
      </div>
  <% end %>
</div>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= link_to 'Back', menus_path, class: "btn btn-default" %>

    <%= link_to 'Zapisz', save_path(:menu => @menu), method: "post", class: "btn btn-success" %>
  </div>
</div>

