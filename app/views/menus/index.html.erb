<p id="notice"><%= notice %></p>

<h1>Listing Menus</h1>

<%= form_tag controller: 'menus', action: 'generate' do %>
    <%= label_tag(:calories, "Ustal dietÄ™ na:") %>
    <%= number_field_tag(:calories, 1500, within: 1300...2600, step: 100)%> kalorii
    <br>
    <%= submit_tag("GENERUJ ULTRA MENU") %>
<% end %>

<div id="menu">

</div>

<table>
  <thead>
    <tr>
      <th colspan="3">Przygotowane menu</th>
    </tr>
  </thead>

  <tbody>
    <% @menus.each do |menu| %>
      <tr>
        <td><%= link_to 'Show', menu %></td>
        <td><%= link_to 'Edit', edit_menu_path(menu) %></td>
        <td><%= link_to 'Destroy', menu, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

