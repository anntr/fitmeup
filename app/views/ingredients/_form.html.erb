<%= form_for @ingredient, :html => { :class => "form-horizontal ingredient" } do |f| %>

    <% if @ingredient.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@ingredient.errors.count, "error") %> prohibited this ingredient from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @ingredient.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%= error_span(@ingredient[:name]) %>
  </div>
  <div class="control-group">
    <%= f.label :calories, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :calories, :class => 'form-control' %>
    </div>
    <%= error_span(@ingredient[:calories]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            ingredients_path, :class => 'btn btn-default' %>

<% end %>
