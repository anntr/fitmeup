<div class="row">

  <div class="container login-form">
    <div class="col-md-4 col-md-offset-4 panel panel-default text-center">
      <h1>Zalogowani mogą więcej!</h1>
      <%= form_for :login, {url: sessions_path} do |f| %>
          <div class="form-group">
          <div class="input-group ">
            <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
            <%= f.text_field :login, placeholder: "Login", class: "form-control" %>
          </div>
          </div>
          <div class="form-group">
          <div class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
            <%= f.password_field :password, placeholder: "Hasło", class: "form-control" %>
          </div>
          </div>
            <div class="form-group text-center">
          <%= f.submit "Zaloguj", class: "btn btn-success" %>
            </div>
          <hr>
          <div class="form-group text-center">
            <h3>Nie masz konta na FitMeUp?</h3>
            <%= link_to "Zarejestruj się", new_user_path, class: "btn btn-primary" %>
          </div>
      <% end %>
    </div>
  </div>
</div>



