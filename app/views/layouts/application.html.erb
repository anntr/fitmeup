<!DOCTYPE html>
<html>
<head>
  <title>Fitmeup</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= cloudinary_js_config %>
  <link href='https://fonts.googleapis.com/css?family=Roboto:400,300italic,500,300,700,900&subset=latin,latin-ext' rel='stylesheet' type='text/css'>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="navbar navbar-default fitmeup-nav" id="app-navbar">
  <div class="container">
    <%= link_to "FitMeUP!", pages_main_path, class: "navbar-brand" %>

    <ul class="nav navbar-nav navbar-right">
      <% if current_user %>
          <li><%= link_to "Twoje Menu", menus_path %></li>
      <% end %>

      <li class="dropdown">
        <%= link_to recipes_path, :class => "dropdown-toggle", :data => {:toggle => "dropdown"}, :role => "button", :aria => {:expanded => "false", :haspopup => "true"} do %>
            Przepisy <span class="caret"></span>
        <% end %>
        <ul class="dropdown-menu" role="menu">
          <li> <%= link_to "Wszystkie przepisy", recipes_path %></li>
          <li> <%= link_to "StwÃ³rz przepis", new_recipe_path %></li>
        </ul>
      </li>
      <% if current_user %>
          <li>
            <%= link_to "Wyloguj (#{current_user.login})", logout_path %>
          </li>
      <% else %>
          <li>
            <%= link_to "Zaloguj", login_path %>
          </li>
          <li>
            <%= link_to "Rejestracja", new_user_path %>
          </li>
      <% end %>
    </ul>
  </div>
</div>

<div class="container">
  <%= render :partial => "shared/messages", :flash => flash %>

  <%= yield %>
</div>
</body>
</html>
